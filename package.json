{
	"name": "web-monitor",
	"version": "0.0.0",
	"description": "Monitoring for site availability",
	"main": "index.js",
	"keywords": [
		"node",
		"monitoring",
		"http"
	],
	"author": "dmytrovelychko",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git@github.com:dmitriyvelichkodev/web-monitor.git"
	},
	"scripts": {
		"start": "if [ \"$NODE_ENV\" = \"production\" ]; then node index.js; else nodemon index.js; fi",
		"lint": "eslint $(find . -path ./node_modules -prune -o -name '*.js' -print) --fix",
		"pretty-quick": "pretty-quick --staged $(find . -path ./node_modules -prune -o -name '*.js' -print)",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"config": "^3.2.2",
		"joi": "^14.3.1",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"eslint": "^6.2.0",
		"husky": "^3.0.4",
		"nodemon": "^1.19.2",
		"prettier": "^1.18.2",
		"pretty-quick": "^1.11.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run pretty-quick && npm run lint"
		}
	}
}
